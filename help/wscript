def build(bld):

    obj = bld.new_task_gen('xml_doc')
    obj.doc_module = 'xiphos'
    obj.doc_entities = 'legal.xml'
    obj.doc_includes = DOC_INCLUDES
    obj.doc_figures = DOC_FIGURES
    obj.doc_linguas = DOC_LINGUAS

