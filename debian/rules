#!/usr/bin/make -f

DEB_DH_INSTALL_SOURCEDIR := debian
include /usr/share/cdbs/1/rules/debhelper.mk
include /usr/share/cdbs/1/class/gnome.mk

DEB_CONFIGURE_EXTRA_FLAGS := --enable-pspell

binary-install/gnomesword::
	chmod 644 debian/gnomesword/usr/share/gnome/help/gnomesword/C/*.xml
	chmod 644 debian/gnomesword/usr/share/gnome/help/gnomesword/fr/*.xml
	rm debian/gnomesword/usr/share/doc/gnomesword/COPYING*
	rm debian/gnomesword/usr/share/doc/gnomesword/INSTALL*
	mv debian/gnomesword/usr/share/doc/gnomesword/ChangeLog debian/gnomesword/usr/share/doc/gnomesword/changelog
