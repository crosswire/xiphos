<!-- General Settings -->
	<sect1 id="general-settings">
		<title>General Settings</title>
		<sect2 id="tab-pane">
			<title>Tabs and Pane Settings</title>
		<figure>
			<title>Tab and Pane Settings</title>
	        	<screenshot>
